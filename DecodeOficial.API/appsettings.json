{
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft": "Warning",
      "Microsoft.Hosting.Lifetime": "Information"
    }
  },
  "Serilog": {
    "MinimumLevel": {
      "Default": "Debug",
      "Override": {
        "Microsoft": "Information",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "Elasticsearch",
        "Args": {
          "nodeUris": "http://localhost:9200",
          "indexFormat": "decodeoficial-{0:yyyy.MM}",
          "minimumLogEventLevel": "Debug"
        }
      },
      {
        "Name": "RollingFile",
        "Args": {
          "pathFormat": "log\\decodeoficial-{Date}.log",
          "outputTemplate": "{Timestamp:yyyy-MM-dd HH:mm:ss.fff zzz} [{Level}] [{SourceContext}] [{EventId}] {Message}{NewLine}{Exception}",
          "restrictedToMinimumLevel": "Error"
        }
      }
    ]
  },
  "AllowedHosts": "*",
  "ConnectionStrings": {
    "DecodeContext": "Server=LAPTOP-DO35CR9L\\SQLSERVER;Database=DecodeOficial;User Id=sa;pwd=123;MultipleActiveResultSets=true"
  }
}
